[ ca ]
default_ca = {{rootca.default_rootca_name}}

[ myCA ]
dir = {{dir}}
certificate = {{dir_rootca}}{{rootca.default_rootca_crt_name}}
database = {{dir_rootca_database}}index.txt
new_certs_dir = {{dir_new_ssl_certs}}
serial = {{dir_rootca_serial}}serial
private_key = {{dir_rootca}}rootca.key
RANDFILE = {{dir_rootca_private}}.rand

default_md = sha256
default_days = 3650
default_crl_days = 30
default_cert_type = ca

policy = myCA_policy
x509_extensions = myCA_extensions

[ myCA_policy ]
commonName = supplied
stateOrProvinceName = supplied
countryName = supplied
emailAddress = supplied
organizationName = supplied
organizationalUnitName = supplied

[ myCA_extensions ]
basicConstraints = critical, CA:true
keyUsage = critical, digitalSignature, keyCertSign, cRLSign

[ server_cert ]
basicConstraints = CA:FALSE
keyUsage = digitalSignature, keyEncipherment
extendedKeyUsage = serverAuth
subjectAltName = @alt_names

[ alt_names ]
DNS.1 = {{dns_alt_names.dns1}}
DNS.2 = {{dns_alt_names.dns2}}
